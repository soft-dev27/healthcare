<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_toStartOf="@+id/btn_check">
        <com.landonferrier.healthcareapp.views.CustomFontTextView
            android:id="@+id/tv_surgery_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font_style="bold"
            android:text="test askd jfl;asdf jl;asdf ;sjdafl ;asjdflkjsa dl;fjsakdjf l;kasdjf lkasjdfhasdjflhajlsdfh ;skfhs dafjkasdfl ;"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"/>

        <com.landonferrier.healthcareapp.views.CustomFontTextView
            android:id="@+id/tv_surgery_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font_style="regular"
            android:text=""
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/colorText"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/close_cross"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:tint="@color/colorRed"
        android:scaleType="center"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        />

    <ImageView
        android:id="@+id/btn_check"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/check_mark"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:scaleType="center"
        android:layout_marginEnd="16dp"
        />

</RelativeLayout>