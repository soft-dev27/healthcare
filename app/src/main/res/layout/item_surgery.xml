<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/icon_checkbox"
        android:layout_marginStart="16dp"
        android:layout_gravity="center_vertical"
        android:scaleType="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <com.landonferrier.healthcareapp.views.CustomFontTextView
            android:id="@+id/tv_surgery_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font_style="bold"
            android:text="testetsete e  se e a fda sdfa sdfasd asd sd asd fasdf adf assd fsd fasd a sdf asdf sdf asd fasd fasd fasd fasd"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>

        <com.landonferrier.healthcareapp.views.CustomFontTextView
            android:id="@+id/tv_surgery_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font_style="bold"
            android:text="@string/name"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/colorText"/>

    </LinearLayout>

</LinearLayout>