<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.landonferrier.healthcareapp.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_week_after_surgery"
                app:font_style="semi"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgray"
                android:layout_marginStart="16dp"/>


            <com.landonferrier.healthcareapp.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_you_checked_in_with_your_docter_about_your_procedure"
                app:font_style="semi"
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cb_checked_docter_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/item_checkbox"
                        android:clickable="true"
                        android:focusable="true"/>

                    <com.landonferrier.healthcareapp.views.CustomFontTextView
                        android:id="@+id/tv_checked_docter_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        app:font_style="semi"
                        android:textColor="@color/item_check_color"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:id="@+id/cb_checked_docter_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/item_checkbox"
                        android:clickable="true"
                        android:focusable="true"/>

                    <com.landonferrier.healthcareapp.views.CustomFontTextView
                        android:id="@+id/tv_checked_docter_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        app:font_style="semi"
                        android:textColor="@color/item_check_color"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>
            <com.landonferrier.healthcareapp.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_you_been_following_your_post_op_directions_as_suggested_by_your_doctor"
                app:font_style="semi"
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cb_following_direction_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/item_checkbox"
                        android:clickable="true"
                        android:focusable="true"/>

                    <com.landonferrier.healthcareapp.views.CustomFontTextView
                        android:id="@+id/tv_following_direction_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        app:font_style="semi"
                        android:textColor="@color/item_check_color"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:id="@+id/cb_following_direction_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/item_checkbox"
                        android:clickable="true"
                        android:focusable="true"/>

                    <com.landonferrier.healthcareapp.views.CustomFontTextView
                        android:id="@+id/tv_following_direction_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        app:font_style="semi"
                        android:textColor="@color/item_check_color"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>


            <com.landonferrier.healthcareapp.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2_weeks_after_surgery"
                app:font_style="semi"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgray"
                android:layout_marginStart="16dp"/>


            <com.landonferrier.healthcareapp.views.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/have_you_scheduled_your_first_post_op_visit_with_your_doctor"
                app:font_style="medium"
                android:textSize="14sp"
                android:textColor="@color/colorDarkGray"
                android:layout_marginTop="8dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cb_scheduled_first_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/item_checkbox"
                        android:clickable="true"
                        android:focusable="true"/>

                    <com.landonferrier.healthcareapp.views.CustomFontTextView
                        android:id="@+id/tv_scheduled_first_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        app:font_style="semi"
                        android:textColor="@color/item_check_color"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:id="@+id/cb_scheduled_first_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/item_checkbox"
                        android:clickable="true"
                        android:focusable="true"/>

                    <com.landonferrier.healthcareapp.views.CustomFontTextView
                        android:id="@+id/tv_scheduled_first_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        app:font_style="semi"
                        android:textColor="@color/item_check_color"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>

            <com.landonferrier.healthcareapp.views.CustomFontTextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/have_you_scheduled_your_post_op_xray_ct_mri"
                app:font_style="medium"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                />
            <com.landonferrier.healthcareapp.views.CustomFontEditText
                android:id="@+id/edt_schedule_post_op"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text=""
                android:hint="@string/enter_date"
                android:textColor="@color/colorPrimary"
                app:font_style="medium"
                android:textSize="18sp"
                android:textColorHint="@color/colorgray"
                android:textCursorDrawable="@drawable/cursor"
                android:background="@color/transparent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"/>

            <com.landonferrier.healthcareapp.views.CustomFontTextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/did_your_surgeon_send_email_the_order_to_the_imaging_facility"
                app:font_style="medium"
                android:textSize="14sp"
                android:textColor="@color/colorDarkGray"
                android:layout_marginTop="8dp"
                />

            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cb_email_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/item_checkbox"
                        android:clickable="true"
                        android:focusable="true"/>

                    <com.landonferrier.healthcareapp.views.CustomFontTextView
                        android:id="@+id/tv_email_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        app:font_style="semi"
                        android:textColor="@color/item_check_color"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:id="@+id/cb_email_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/item_checkbox"
                        android:clickable="true"
                        android:focusable="true"/>

                    <com.landonferrier.healthcareapp.views.CustomFontTextView
                        android:id="@+id/tv_email_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        app:font_style="semi"
                        android:textColor="@color/item_check_color"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>
            <com.landonferrier.healthcareapp.views.CustomFontTextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/do_you_have_the_image_facility_address"
                app:font_style="medium"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                />
            <com.landonferrier.healthcareapp.views.CustomFontEditText
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text=""
                android:hint="Enter address"
                android:textColor="@color/colorPrimary"
                app:font_style="medium"
                android:textSize="18sp"
                android:textColorHint="@color/colorgray"
                android:textCursorDrawable="@drawable/cursor"
                android:background="@color/transparent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"/>


            <com.landonferrier.healthcareapp.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_month_after_surgery"
                app:font_style="semi"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgray"
                android:layout_marginStart="16dp"/>

            <com.landonferrier.healthcareapp.views.AutofitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/have_you_had_your_first_post_op_appointment"
                android:maxLines="1"
                app:font_style="medium"
                android:textSize="14sp"
                android:textColor="@color/colorDarkGray"
                android:layout_marginTop="8dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cb_first_appointment_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/item_checkbox"
                        android:clickable="true"
                        android:focusable="true"/>

                    <com.landonferrier.healthcareapp.views.CustomFontTextView
                        android:id="@+id/tv_first_appointment_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        app:font_style="semi"
                        android:textColor="@color/item_check_color"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:id="@+id/cb_first_appointment_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/item_checkbox"
                        android:clickable="true"
                        android:focusable="true"/>

                    <com.landonferrier.healthcareapp.views.CustomFontTextView
                        android:id="@+id/tv_first_appointment_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        app:font_style="semi"
                        android:textColor="@color/item_check_color"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>